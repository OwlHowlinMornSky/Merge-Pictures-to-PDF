<Window x:Class="WpfGui.WindowMorePreferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGui"
        mc:Ignorable="d"
        Title="More Preferences" Height="450" Width="800">
    <Grid>
        <Label Content="Compress Type" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="60,40,0,0" VerticalAlignment="Top" SelectedIndex="0" Width="150">
            <ComboBoxItem ContentStringFormat="JPEG"/>
            <ComboBoxItem ContentStringFormat="PNG"/>
        </ComboBox>
        <Label Content="Compress Quality" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
        <Slider Margin="60,110,10,0" VerticalAlignment="Top"/>
        <CheckBox Content="Convert Archive Files" HorizontalAlignment="Left" Margin="10,192,0,0" VerticalAlignment="Top" IsChecked="True"/>
    </Grid>
</Window>
